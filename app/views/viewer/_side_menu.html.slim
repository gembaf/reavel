#side_menu
  .list
    - brothers.each do |brother|
      - path = brother.class == Story ? viewer_show_path(story_id: brother.id) : viewer_chapters_path(chapter_id: brother.id)
      - if brother.id == current_id
        p.title.current
          = "#{brother.no}. #{brother.title}"
      - else
        p.title
          = "#{brother.no}. "
          = link_to brother.title, path

